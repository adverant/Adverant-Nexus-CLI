# Adverant-Nexus API Configuration
NEXUS_API_URL=http://localhost:9092
NEXUS_WS_URL=ws://localhost:9093
NEXUS_MCP_ENABLED=true

# Authentication
NEXUS_API_KEY=your_api_key_here
# Or use JWT token
# NEXUS_JWT_TOKEN=your_jwt_token_here

# Service Endpoints (optional - defaults to API Gateway)
# GRAPHRAG_ENDPOINT=http://localhost:9090
# MAGEAGENT_ENDPOINT=http://localhost:9080
# SANDBOX_ENDPOINT=http://localhost:9095

# CLI Configuration
NEXUS_OUTPUT_FORMAT=json
NEXUS_STREAMING=true
NEXUS_VERBOSE=false
NEXUS_LOG_LEVEL=info

# Development
NODE_ENV=development

# Optional: External Service API Keys (if using directly)
# OPENROUTER_API_KEY=your_openrouter_key_here
# VOYAGE_API_KEY=your_voyage_key_here

# Plugin Configuration
NEXUS_PLUGINS_DIR=~/.nexus/plugins
NEXUS_PLUGINS_AUTO_UPDATE=false

# Session Configuration
NEXUS_SESSION_DIR=~/.nexus/sessions
NEXUS_SESSION_AUTO_SAVE=true

# Performance
NEXUS_CACHE_ENABLED=true
NEXUS_CACHE_TTL=300000
NEXUS_REQUEST_TIMEOUT=30000
NEXUS_MAX_RETRIES=3

# Security
NEXUS_VERIFY_SSL=true
NEXUS_SECURE_STORAGE=true
